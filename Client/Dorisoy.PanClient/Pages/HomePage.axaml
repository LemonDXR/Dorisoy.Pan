                                     MaxHeight="50"
                                     Value="50"
                                     Maximum="70"
                                     Foreground="#f7901a"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     Orientation="Horizontal" />
                        <TextBlock Text="50%"
                                   FontWeight="Bold"
                                   Classes="bottomvalue"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="15,0,15,0"/>
                    </DockPanel>
                </Grid>

            </Border>

        </Grid>

    </Grid>
</UserControl>
